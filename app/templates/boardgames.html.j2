{% extends "base.html.j2" %}

{% block header %}
{{ super() }}
<link rel="stylesheet" type="text/css" media="screen" href="/static/css/boardgames.css" />
{% endblock header %}

{% block title %}Borkfolio - Board Games{% endblock %}

{% block content %}
<div class="pt-5"></div>
<div class="row mb-5 justify-content-center">
  <div class="col-md-12 col-lg-8">
    <div class="accordion" id="boardgameAccordion">
      <div class="accordion-item">
        <h2 class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapseBgCollection" aria-expanded="false" aria-controls="collapseBgCollection">
            <i class="bi bi-dice-3-fill me-2" style="font-size: 2rem; color: cornflowerblue"></i>
            <h5 class="ms-2 mb-0">See Current Collection</h5>
          </button>
        </h2>
        <div id="collapseBgCollection" class="accordion-collapse collapse">
          <table class="table table-striped table-hover accordion-body mb-0">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Year</th>
              </tr>
            </thead>
            <tbody id="bgCollectionTable"></tbody>
          </table>
          <p class="mb-0 text-center text-muted">
            Data provided by the BoardGameGeek API
          </p>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header">
          <div class="d-block text-center">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
              data-bs-target="#collapseBgSearch" aria-expanded="false" aria-controls="collapseBgSearch">
              <i class="bi bi-send-plus-fill me-2" style="font-size: 2rem; color: cornflowerblue"></i>
              <h5 class="ms-2 mb-0">Recommend A Game</h5>
            </button>
          </div>
        </h2>
        <div id="collapseBgSearch" class="accordion-collapse collapse">
          <div class="accordion-body">
            <form id="bgSearchForm">
              <label for="name">Board Game Name</label><br />
              <input type="text" name="name" />
              <input type="submit" value="Search" />
            </form>
            <table class="table table-striped table-hover accordion-body mb-0">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Year</th>
                </tr>
              </thead>
              <tbody id="bgSearchResultTable"></tbody>
            </table>
            <form class="mt-3" id="bgSuggestForm">
              <input id="submitSuggestion" disabled type="submit" value="Send Suggestion" />
            </form>
            <div class="mt-3 mb-0 pt-3 border-top text-center text-muted">
              Data provided by the BoardGameGeek API
            </div>
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header">
          <div class="d-block text-center">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
              data-bs-target="#collapseBgSuggestions" aria-expanded="false" aria-controls="collapseBgSuggestions">
              <i class="bi bi-search me-2" style="font-size: 2rem; color: cornflowerblue"></i>
              <h5 class="ms-2 mb-0">Peek The Recommendations</h5>
            </button>
          </div>
        </h2>
        <div id="collapseBgSuggestions" class="accordion-collapse collapse">
          <div class="accordion-body">
            <table class="table table-striped table-hover accordion-body mb-0">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Year</th>
                  <th scope="col">Count</th>
                </tr>
              </thead>
              <tbody id="bgSuggestionsTable"></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock content %}

{% block scripts %}
{{ super() }}
<script src="/static/js/boardgames.js"></script>
{% endblock scripts %}